<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:id="@+id/tvDisease"
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/tvDisease"
        android:id="@+id/tvDiseaseMoreinfo"
        android:layout_width="343dp"
        android:layout_height="43dp"
        android:background="@color/white"
        android:autoLink="web"
        android:fontFamily="sans-serif"
        android:drawableStart="@drawable/ic_info"
        android:paddingTop="14dp"
        android:text="For more Information, click HERE"
        android:textColor="@color/blue"
        android:textSize="15sp" />

    <!--button for dismissing our dialog-->
    <Button
        android:layout_below="@+id/tvDiseaseMoreinfo"
        android:id="@+id/idBtnDismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Dismiss dialog"
        android:textAllCaps="false" />

</RelativeLayout>